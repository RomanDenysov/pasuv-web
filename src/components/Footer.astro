---
import Wrapper from "../layouts/Wrapper.astro";
import Button from "./Button.astro";
import { footerData } from '../lib/text-data';

---

<footer class="footer">
  <Wrapper>
    <div class="container">
      <div class="section one">
        <h2>
          {footerData.section1.content}
        </h2>
        <Button body={footerData.section1.button.toUpperCase()}>
      </div>
      <div class="section two">
        <div class="two-item">{footerData.section2.content}</div>
        <div class="two-item">{footerData.section2.mailbutton}</div>
        <div class="two-item">{footerData.section2.phonebutton}</div>
      </div>
      <div class="section three">
        <div class="three-item">
          <h3>{footerData.section3.item1.city}</h3>
          <span>
            {footerData.section3.item1.address}
          </span>
          <a href=""> {footerData.section3.item1.button}</a>
        </div>
        <div class="three-item">
          <h3>{footerData.section3.item1.city}</h3>
          <span>
            {footerData.section3.item1.address}
          </span>
          <a href=""> {footerData.section3.item1.button}</a>
        </div>
        
        <div class="three-item">Item tree 3</div>
        <div class="three-item">Item tree 4</div>
      </div>
      <div class="section four">
        <div class="four-item">
          <a>{footerData.section4.item1}</a>
          <a>{footerData.section4.item2}</a>
        </div>
        <div class="four-item end">
          <div>{footerData.section4.item3}</div>
          <div>CONTENT 2</div>
        </div>
      </div>
    </div>
  </Wrapper>
</footer>

<style>
  footer {
    background-color: var(--green);
    color: white;
    padding: 20px;
    text-align: center;
    width: 100%;
    height: fit-content;
  }

  .container {
    max-width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
  }
  .section {
    display: flex;
    align-items: center;

    height: 100%;
    width: 100%;
  }
  .one {
    flex: 4;
    flex-direction: column;
    justify-content: center;
    gap: 100px;
    margin: 240px 0 120px 0;
  }
  .two {
    flex: 2;
    justify-content: space-between;
    margin: 120px 0;
  }
  .three {
    flex: 2;
    justify-content: space-between;
    margin: 100px 0;

  }
  .four {
    flex: 1;
    justify-content: space-between;
    margin: 60px 0;
  }
  .two-item{
    flex: 1;
    display: flex;
    justify-content: flex-start;
    align-items: center;
    text-align: start;
  }
  .three-item{
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: flex-start;
    text-align: start;
  }
  .four-item{
    flex: 1;
    display: flex;
    justify-content: flex-start;
    align-items: flex-start;
    text-align: start;
  }
  .end{;
    justify-content: flex-end;
  }
</style>
