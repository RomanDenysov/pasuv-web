---

interface ReferenceCardProps {
    title: string;
    category: string;
    city: string;
    year: string;
    img: string;
    slug: string;
}

const { title, category, city, year, slug, img } = Astro.props as ReferenceCardProps;
---

<div class="card">

    <div class="top" >
    <a href={`/referencie/${slug}`}>
        <svg width="51" height="51" viewBox="0 0 51 51" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M50 1L1 50" stroke="black" stroke-width="2"/>
            <path d="M10 1H50V41" stroke="black" stroke-width="2"/>
        </svg>
        <img src={img} alt="" class="img">
    </a>
    </div>

   
    <h1>{title}</h1>
    

    <span class="line"/>

    <div class="bottom">
        <span>{city}</span>
        <span>{year}</span>
        <span>{category}</span>
    </div>

    

</div>
<style>
    .card{
        position: relative;
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        justify-content: space-between;
        max-width: 590px;
        overflow: hidden;
        width: 100%;
        height: 100%;
        gap: 1rem;
        text-overflow: ellipsis;
        white-space: nowrap;
    }
    .top{
        position: relative;
        width: 100%;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        overflow: hidden;
        cursor: pointer;
    }
    .top svg{
        position: absolute;
        top: 1rem;
        right: 1rem;
        width: 50px;
        height: 50px;
        z-index: 1;
    }
    .img{
        aspect-ratio: 1/1;
        max-width: 590px;
        max-height: 590px;
        width: 100%;
        height: 100%;
        object-fit: cover;
    }
    h1 {
        font-size: 20px;
        margin-top: 0rem;
    }
    .line{
        width: 100%;
        height: 1px;
        background-color: var(--gray-neutral);
    }
    .bottom{
        display: flex;
        align-items: center;
        justify-content: space-between;
        width: 100%;
        gap: 1rem;
        font-size: 16px;
        color: var(--gray-neutral);
        font-weight: 400;
        line-height: 24px;
        margin-bottom: 110px;
    }
    @media screen and (min-width: 768px){
        h1 {
            font-size: 40px;
        }
    }
    
</style>
