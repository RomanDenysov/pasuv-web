---
interface IButton {
	body: string;
	href?: string;
	size?: "small" | "large";
	color: "green" | "black" | "white";
	footer?: boolean;
	icon?: boolean;
}

const {
	body,
	href,
	size = "large",
	color = "white",
	footer = false,
	icon = true,
} = Astro.props as IButton;
---

<a class="link" href={href}>
	<button
		class:list={[
			"btn",
			color === "green" && "btn-green",
			color === "black" && "btn-black",
			size === "small" && "btn-small",
		]}
	>
		<span class:list={["transparent", `${size}-text`]} aria-hidden="true">
			{body}
			<svg
				width={size === "small" ? "16" : "24"}
				height={size === "small" ? "16" : "24"}
				fill="none"
				xmlns="http://www.w3.org/2000/svg"
			>
				<path d="M68 20L19 69" stroke="transparent" stroke-width="8"
				></path>
				<path d="M28 20H68V60" stroke="transparent" stroke-width="8"
				></path>
			</svg>
		</span>
		<div class:list={["btn-front", `btn-front-${color}`]}>
			<span class:list={["btn-text", `${size}-text`]}>
				{body}
				<svg
					class:list={[`front-${color}`]}
					width={size === "small" ? "16" : "24"}
					height={size === "small" ? "16" : "24"}
					viewBox="0 0 88 88"
					fill="none"
					xmlns="http://www.w3.org/2000/svg"
				>
					<path d="M68 20L19 69" stroke="white" stroke-width="8"
					></path>
					<path d="M28 20H68V60" stroke="white" stroke-width="8"
					></path>
				</svg>
			</span>
		</div>
		<div class:list={["btn-back", `btn-back-${color}`]}>
			<span class:list={["btn-text", `${size}-text`]}>
				{body}
				<svg
					class:list={[`back-${color}`]}
					width={size === "small" ? "16" : "24"}
					height={size === "small" ? "16" : "24"}
					viewBox="0 0 88 88"
					fill="none"
					xmlns="http://www.w3.org/2000/svg"
				>
					<path
						d="M68 20L19 69"
						stroke={color === "white" ? "black" : "white"}
						stroke-width="8"></path>
					<path
						d="M28 20H68V60"
						stroke={color === "white" ? "black" : "white"}
						stroke-width="8"></path>
				</svg>
			</span>
		</div>
	</button>
</a>
<!-- rgba(46, 197, 91, 0.32) -->
<style>
	button {
		align-self: center;
		position: relative;
		border-radius: 38px;
		padding: 24px;
		border: 1px solid rgba(255, 255, 255, 0.32);
		background-color: transparent;
		cursor: pointer;
		overflow: hidden;
		perspective: 1000px;
		transition: all 0.5s 0.1s cubic-bezier(0.2, 0.05, 0.35, 0.25);

		font-family: "Chakra Petch", sans-serif;
		font-style: normal;
	}
	.btn-small {
		padding: 12px;
		font-size: 16px;
	}
	.btn-green {
		border: 1px solid rgba(147, 191, 62, 0.32);
	}
	.link {
		text-decoration: none;
		color: inherit;
	}
	.transparent {
		position: relative;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		color: transparent;
		display: flex;
		align-items: center;
		justify-content: center;
		z-index: 1;

		font-size: 20px;
	}
	.small {
		gap: 4px;
	}
	.large-text {
		gap: 6px;
	}
	.btn-front,
	.btn-back {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		backface-visibility: hidden;
		transition: transform 0.5s 0.2s cubic-bezier(0.19, 1, 0.22, 1);
	}
	.btn-back {
		transform: translateY(100%) rotateX(180deg);
	}
	.btn-front {
		color: white;
	}
	.btn-front-green {
		color: var(--green);
	}
	.btn-back-green {
		color: white;
	}
	.btn-front-black {
		color: black;
	}
	.btn-back-black {
		color: white;
	}
	.btn-text {
		position: absolute;
		top: 50%;
		left: 50%;
		transform: translate(-50%, -50%);

		font-size: 16px;
		font-weight: 500;
		white-space: nowrap;

		display: flex;
		align-items: center;
		justify-content: center;

		z-index: 2;
	}
	.front-green path {
		stroke: var(--green);
	}
	.back-green path {
		stroke: white;
	}

	.front-black path {
		stroke: black;
	}
	.back-black path {
		stroke: white;
	}
	.small-text {
		font-size: 12px;
		gap: 6px;
	}

	button:hover .btn-front {
		transform: translateY(-100%) rotateX(180deg);
	}
	button:hover .btn-back {
		color: black;
		transform: translateY(0) rotateX(0);
	}
	button:hover .btn-front-black {
		color: white;
	}
	button:hover .btn-back-green {
		color: white;
	}
	button:hover .btn-back-black {
		color: white;
	}
	button:hover {
		background-color: rgba(255, 255, 255, 0.96);
	}
	.btn-green:hover {
		background-color: var(--green);
	}
	.btn-black {
		border: 1px solid rgba(0, 0, 0, 0.32);
	}
	.btn-black:hover {
		background-color: black;
	}

	@media screen and (min-width: 768px) {
		.btn-text {
			position: absolute;
			top: 50%;
			left: 50%;
			transform: translate(-50%, -50%);

			font-size: 20px;
			font-weight: 500;
			white-space: nowrap;

			display: flex;
			align-items: center;
			justify-content: center;

			z-index: 2;
		}
		.small-text {
			font-size: 16px;
			gap: 6px;
		}
		.large-text {
			gap: 12px;
		}
		.small {
			gap: 6px;
		}
	}
</style>
