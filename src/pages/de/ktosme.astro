---
import Hero from "../../components/Hero.astro";
import Layout from "../../layouts/Layout.astro";
import { Icon } from "astro-icon/components";
import { t, changeLanguage } from "i18next";

changeLanguage("de");
---

<Layout title={t("ktosme.site.title")} style="secondary">
	<Hero
		img="/hero-about-us.jpg"
		title={t("ktosme.hero.title")}
		subtitle={t("ktosme.hero.subtitle")}
		content1={t("ktosme.hero.content1")}
		content2={t("ktosme.hero.content2")}
	/>
	<section class="container">
		<video autoplay class="video" preload="auto" loop>
			<source src="/videos/video-about.mp4" type="video/mp4" />
		</video>
		<div class="info-box">
			<h1 class="title">
				{t("ktosme.info.title")}
			</h1>
			<div class="flex-box">
				<p>
					{t("ktosme.info.subtitle1")}
				</p>
				<p>
					{t("ktosme.info.subtitle2")}
				</p>
			</div>
			<div class="sertificats">
				<div class="sertificats-item">
					<span class="sertificats-separator"></span>
					<Icon
						name="TUV"
						size={100}
						style={{ alignSelf: "start" }}
					/>
					<span class="sertificats-subtitle">ISO 9001:2015</span>
				</div>
				<div class="sertificats-item">
					<span class="sertificats-separator"></span>
					<Icon
						name="TUV"
						size={100}
						style={{ alignSelf: "start" }}
					/>
					<span class="sertificats-subtitle">ISO 14001:2015</span>
				</div>
				<div class="sertificats-item">
					<span class="sertificats-separator"></span>
					<Icon
						name="TUV"
						size={100}
						style={{ alignSelf: "start" }}
					/>
					<span class="sertificats-subtitle">ISO 9001:2015</span>
				</div>
				<div class="sertificats-item">
					<span class="sertificats-separator"></span>
					<Icon
						name="POS"
						size={100}
						style={{ alignSelf: "start" }}
					/>
					<span class="sertificats-subtitle"
						>{t("ktosme.info.sertificate")}</span
					>
				</div>
			</div>
		</div>
	</section>
</Layout>

<style>
	.container {
		margin: auto;
		margin-bottom: 120px;
		max-width: 1440px;
		display: flex;
		flex-direction: column;
		justify-content: space-between;
		align-items: center;
		padding: 0 1rem;
		gap: 80px;
	}
	.video {
		margin-top: 30px;
		width: 100%;
	}
	.video source {
		width: 100%;
	}
	.info-box {
		display: flex;
		flex-direction: column;
		justify-content: space-between;
		align-items: center;
		gap: 120px;
	}
	.flex-box {
		display: flex;
		flex-direction: column;
		justify-content: space-between;
		align-items: flex-start;
		gap: 4rem;
	}
	.flex-box p {
		flex: 1;
	}
	.sertificats {
		margin-top: 2.5rem;
		width: 100%;
		display: grid;
		grid-template-columns: repeat(2, 1fr);
		place-items: start;
		place-content: start;
		column-gap: 1rem;
		row-gap: 3rem;
		margin-bottom: 80px;
	}
	.sertificats-item {
		width: 100%;
		display: flex;
		flex-direction: column;
		align-items: flex-start;
		justify-content: center;
		gap: 1rem;
	}
	.sertificats-separator {
		width: 90%;
		height: 1px;
		background-color: #000;
	}
	.sertificats-logo {
		width: 34px;
		height: auto;
		object-fit: contain;
		object-position: center;
	}
	.sertificats-subtitle {
		width: 80%;
		font-weight: 600;
	}
	@media screen and (min-width: 768px) {
		.container {
			padding: 0 2rem;
			margin-bottom: 240px;
			gap: 120px
		}
		.sertificats {
			grid-template-columns: repeat(4, 1fr);
		}
		.flex-box {
			flex-direction: row;
			gap: 2rem;
		}
	}
	@media screen and (min-width: 1024px){
		.container {
			gap: 240px;
		}
		
	}
</style>
